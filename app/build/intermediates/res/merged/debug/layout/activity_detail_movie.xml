<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail_movie"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iak.vi.finalprojectvi.movie.DetailMovie">

    <ImageView
        android:id="@+id/iv_detail_movie_banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/heart_black"
        android:background="@android:color/holo_blue_dark"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_play_movie" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_detail_movie_poster"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_below="@+id/iv_detail_movie_banner"
        android:src="@drawable/heart_red"
        android:layout_margin="10dp"
        android:background="@color/body_text_black"/>

    <TextView
        android:id="@+id/tv_detail_movie_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_detail_movie_poster"
        android:layout_below="@+id/iv_detail_movie_banner"
        android:text="I'm movie Title"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_margin="20dp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_release_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_detail_movie_title"
        android:layout_toRightOf="@+id/iv_detail_movie_poster"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"/>

    <RatingBar
        android:id="@+id/rb_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="2.0"
        android:layout_toRightOf="@+id/iv_detail_movie_poster"
        android:layout_below="@+id/tv_release_date"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        style="@android:style/Widget.Holo.RatingBar.Indicator" />

    <TextView
        android:id="@+id/tv_detail_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_detail_movie_poster"
        android:text="description"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_margin="10dp"/>

    <View
        android:id="@+id/view_line"
        android:layout_below="@+id/tv_detail_description"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_margin="3dp"
        android:background="@android:color/holo_blue_dark"/>
    <View
        android:id="@+id/view_line2"
        android:layout_below="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@android:color/holo_blue_dark"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list_trailer"
        android:layout_below="@+id/view_line2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

    </android.support.v7.widget.RecyclerView>


</RelativeLayout>
