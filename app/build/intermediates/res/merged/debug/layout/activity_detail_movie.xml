<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail_movie"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.iak.vi.finalprojectvi.movie.DetailMovie">

    <ImageView
        android:id="@+id/iv_detail_movie_banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/heart_black"
        android:background="@android:color/holo_blue_dark"/>

    <ImageView
        android:id="@+id/iv_detail_movie_poster"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_below="@+id/iv_detail_movie_banner"
        android:src="@drawable/heart_red"
        android:layout_margin="10dp"
        android:background="@color/body_text_black"/>

    <TextView
        android:id="@+id/tv_detail_movie_title"
        style="@style/MovieItemText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_detail_movie_poster"
        android:layout_below="@+id/iv_detail_movie_banner"
        android:text="I'm movie Title"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_detail_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_detail_movie_poster"
        android:text="description"
        android:layout_margin="10dp"/>

</RelativeLayout>
